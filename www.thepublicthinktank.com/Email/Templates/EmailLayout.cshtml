@*
    Email layout for all transactional emails.
    Usage: Set Layout = "EmailLayout" in your email templates.
*@
@{
    Layout = null; // Prevents inheriting the site layout
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] ?? "The Public Think Tank"</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333333;
            padding: 20px;
        }

        .card {
            max-width: 600px;
            margin: auto;
            background: #ffffff;
            border-radius: 8px;
            padding: 20px;
            border: 1px solid #ddd;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05)
        }

        .btn {
            display: inline-block;
            padding: 10px 15px;
            background-color: #007acc;
            color: #ffffff !important;
            text-decoration: none;
            border-radius: 4px;
            margin-top: 20px;
        }

        .line-break {
            margin: 25px auto;
            width: 326px;
            border-bottom:1.5px solid #dee2e6;
            
        }

        a:hover {
            color: #005fa3 !important;
        }
            
    </style>
</head>
<body>
    <div class="container card">
        @await Html.PartialAsync("~/Email/Components/_EmailHeader.cshtml")
        @RenderBody()
        @await Html.PartialAsync("~/Email/Components/_EmailFooter.cshtml")
    </div>
</body>
</html>