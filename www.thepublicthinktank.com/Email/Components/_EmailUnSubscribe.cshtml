@using Microsoft.Extensions.Options
@using atlas_the_public_think_tank.Email.Models
@using atlas_the_public_think_tank.Utilities
@inject IOptions<EmailSettings> EmailSettings

@{
    var unsubscribeUrl = $"{UrlHelpers.EnsureProtocol(EmailSettings.Value.BaseUrl)}/email/unsubscribe?token={Model.UnsubscribeToken}";
}

<div style="text-align: center;">
    <p style="font-size: 12px; color: #666;">
        If you no longer wish to receive these emails, you can
        <a href="@unsubscribeUrl" style="color: #0066cc; text-decoration: underline;">unsubscribe here</a>.
    </p>
</div>