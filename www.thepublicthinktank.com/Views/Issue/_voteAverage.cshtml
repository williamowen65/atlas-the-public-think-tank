<div class="vote-average" id="vote-average-@Model.IssueID">
    @(Model.AverageVote % 1 == 0 ? Model.AverageVote.ToString("F0") : Model.AverageVote.ToString("F1"))

</div>

<style>
   .vote-average {
       box-sizing: border-box;
       height: 40px;
       width: 60px;
       border: 3px solid;
       margin: 8px;
       display: flex;
       justify-content: center;
       align-items: center;
       font-weight: bold;
   }
</style>