@{
}







  

    <header class="d-flex justify-content-between pt-2">
        <h3>Forum Categories</h3>
        <div class="dropdown">
         <button class="transparent-btn"> 
            <a href="#" class="d-flex align-items-center col-lg-4 mb-2 mb-lg-0 link-body-emphasis text-decoration-none " data-bs-toggle="dropdown" aria-expanded="false" aria-label="Bootstrap menu">
         </button> 
                
            <i class="fa fa-filter"></i>
            </a>
            <ul class="dropdown-menu text-small shadow" style="">
                <li><a class="dropdown-item" href="#">Filter by Date</a></li>
                <li><a class="dropdown-item" href="#">Filter by Tags</a></li>
                <li><a class="dropdown-item" href="#">Filter by Author</a></li>
            </ul>
        </div>
    </header>

    <hr />


    <div class="accordion" id="categoriesAccordion">
        @if (@Model.Any())
        {
            @foreach (var category in Model)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button style="--background-hover-color: #191c1f"
                                class="accordion-button collapsed hoverable"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#category-@category.CategoryID"
                                aria-expanded="false"
                                aria-controls="category-@category.CategoryID">
                            @category.Name
                        </button>
                    </h2>
                    <div id="category-@category.CategoryID"
                         class="accordion-collapse collapse"
                         data-bs-parent="#categoriesAccordion">
                        <div class="accordion-body">
                            <a href="/category/@category.CategoryID" class="d-block mb-2">View all posts</a>
                            <!-- You can add subcategories or related links here -->
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info">
                No categories available.
            </div>
        }
    </div>


</div>






