@model List<Category_ReadVM> 

<header class="d-flex justify-content-between pt-2 align-items-center">
    <h3 class="" style="width: min-content">Forum Categories</h3>
    @Html.Partial("_view-mode-toggle.cshtml")
</header>

<hr />

<div class="accordion" id="categoriesAccordion">
    @if (@Model.Any())
    {
        @foreach (var category in Model)
        {
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button style="--background-hover-color: #191c1f"
                            class="accordion-button collapsed hoverable"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#category-@category.CategoryID"
                            aria-expanded="false"
                            aria-controls="category-@category.CategoryID">
                        @category.CategoryName
                    </button>
                </h2>
                <div id="category-@category.CategoryID"
                     class="accordion-collapse collapse"
                     data-bs-parent="#categoriesAccordion">
                    <div class="accordion-body">
                        <a href="/category/@category.CategoryID" class="d-block mb-2">View all posts</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
