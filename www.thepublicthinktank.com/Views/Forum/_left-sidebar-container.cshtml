@model List<Category_ReadVM> 

<header class="d-flex justify-content-between pt-2 align-items-center">
    <h3 class="" style="width: min-content">Forum Categories</h3>
    <div class="view-mode-toggle position-relative">
        <div class="toggle-container overflow-hidden">
            <input class="d-none" id="tree" type="radio" name="view-mode" checked />
            <input class="d-none" id="info" type="radio" name="view-mode" />

            <div id="view-mode-toggle-lens" class="bg-body-secondary lens"></div>

            <div id="view-toggle-outline" class="outline"></div>

            <label role="button" for="tree" class="fs-3 toggle-option left-option">
                <i class="fa-solid fa-sitemap"></i>
            </label>
            <label role="button" for="info" class="fs-3 toggle-option right-option">
                <i class="fa-solid fa-info-circle"></i>
            </label>
        </div>
    </div>
</header>

<hr />

<div class="accordion" id="categoriesAccordion">
    @if (@Model.Any())
    {
        @foreach (var category in Model)
        {
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button style="--background-hover-color: #191c1f"
                            class="accordion-button collapsed hoverable"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#category-@category.CategoryID"
                            aria-expanded="false"
                            aria-controls="category-@category.CategoryID">
                        @category.CategoryName
                    </button>
                </h2>
                <div id="category-@category.CategoryID"
                     class="accordion-collapse collapse"
                     data-bs-parent="#categoriesAccordion">
                    <div class="accordion-body">
                        <a href="/category/@category.CategoryID" class="d-block mb-2">View all posts</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
