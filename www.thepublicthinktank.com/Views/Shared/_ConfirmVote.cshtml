@using atlas_the_public_think_tank.Models.ViewModel.AjaxVM
@model ConfirmVoteViewModel

<div class="modal fade" id="confirmVoteModal" tabindex="-1" aria-labelledby="confirmVoteModalLabel">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmVoteModalLabel">Confirm Your Vote</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to cast this vote?
                <div class="mt-2">
                    <div>
                        <strong>Vote Value:</strong> @Model.VoteValue
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ContentItem.Title))
                    {
                        <div>
                            <strong>Title:</strong> @Model.ContentItem.Title
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary close-modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmVoteModalConfirmBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>
