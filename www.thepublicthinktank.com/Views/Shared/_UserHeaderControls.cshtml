@* 
    This is a dynamic Register/Login component in the header

    If not logged in it will show "Register/Login"
    If logged in, the user will see their profile image (which is a dropdown button)
*@
@using Microsoft.AspNetCore.Identity
@using atlas_the_public_think_tank.Data.DatabaseEntities.Users
@inject SignInManager<AppUser> SignInManager

<span id="user-header-controls" class="d-flex">



@if (!SignInManager.IsSignedIn(User))
{
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <span>/</span>
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
}

else
{

        <div class="dropdown" style="position:initial">
            <button class="transparent-btn general-btn hoverable " type="button" id="createDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa fa-plus"></i>
                Create
            </button>
            <ul class="dropdown-menu p-0 create-content-dropdown overflow-hidden fs-5" aria-labelledby="createDropdown">
                <li style="border-right: 3px solid powderblue">
                    <a class="dropdown-item" href="@Url.Action("CreateIssue", "Issue")" style="background: var(--issue-bg)">
                       <span class="pe-2">
                            @await Html.PartialAsync("~/Views/Shared/Icons/_SubIssues.cshtml")
                       </span>
                        New Issue</a>
                </li>
                <li>
                    <a class="dropdown-item" href="@Url.Action("CreateSolutionPost", "Solution")" style="background: var(--solution-bg)">
                        <span class="pe-2">
                            @await Html.PartialAsync("~/Views/Shared/Icons/_Solutions.cshtml")
                        </span>
                        New Solution</a>
                </li>
            </ul>
        </div>

    <div class="flex-shrink-0 dropdown d-flex align-items-center" style="position: revert !important; ">
        <a href="#" class="d-block link-body-emphasis text-decoration-none" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
        </a>
        
        @await Html.PartialAsync("~/Views/Shared/_user-profile-dropdown.cshtml")
    </div>
} 
</span>


