@* 
    This is a dynamic Register/Login component in the header

    If not logged in it will show "Register/Login"
    If logged in, the user will see their profile image (which is a dropdown button)
*@
@using Microsoft.AspNetCore.Identity
@using atlas_the_public_think_tank.Data.DatabaseEntities.Users
@inject SignInManager<AppUser> SignInManager

<span id="user-header-controls" class="d-flex">



@if (!SignInManager.IsSignedIn(User))
{
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <span>/</span>
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
}

else
{

    <button class="transparent-btn general-btn hoverable">
         <a class="anchor-btn-wrapper" href="@Url.Action("CreateIssue", "Issue")">
             <i class="fa fa-plus"></i>
             Create
        </a>
    </button>

    <div class="flex-shrink-0 dropdown d-flex align-items-center" style="position: revert !important; ">
        <a href="#" class="d-block link-body-emphasis text-decoration-none" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
        </a>
        
        @await Html.PartialAsync("~/Views/Shared/_user-profile-dropdown.cshtml")
    </div>
} 
</span>


