@using atlas_the_public_think_tank.Data.DatabaseEntities.Content.Common

@*
    This html partial is used on every issue/solution
    Update: Added Household scale case.
    Pseudocode:
      - Determine highest scale via Model.Scales.Max()
      - Switch on that value
      - Added new case Scale.Household rendering 🏠 with class 'household'
      - Fallback shows ❓
*@

@model Scope

@{
    // Potential null safety (left minimal per request):
    // Assumes Model and Model.Scales are non-null and contain at least one element.
}

<div class="scope-ribbon" data-scope-id="@Model.ScopeID">
    @switch (Model.Scales.Max())
    {
        case Scale.Individual:
            <div class="ribbon individual" tabindex="0" role="button">
                <text>👤</text>
            </div>
            break;
        case Scale.Household:
            <div class="ribbon household" tabindex="0" role="button">
                <text>🏠</text>
            </div>
            break;
        case Scale.National:
            <div class="ribbon national" tabindex="0" role="button">
                <text>🏛️</text>
            </div>
            break;
        case Scale.Regional:
            <div class="ribbon local" tabindex="0" role="button">
                <text>📍</text>
            </div>
            break;
        case Scale.Community:
            <div class="ribbon community" tabindex="0" role="button">
                <text>🤝</text>
            </div>
            break;
        case Scale.Global:
            <div class="ribbon global" tabindex="0" role="button">
                <text>🌍</text>
            </div>
            break;
        default:
            <div class="ribbon" tabindex="0" role="button">
                <text>❓</text>
            </div>
            break;
    }
</div>