@model List<Category_ReadVM> 

<header class="d-flex justify-content-between pt-2 align-items-center">
    <div id="sidebar-headings">
        <h2 id="tree-heading" class="sidebar-heading fs-5 active" style="width: min-content">Issue Categories</h2>
        <h2 id="info-heading" class="sidebar-heading fs-5" style="width: min-content">Page Info</h2>
        <h2 id="filter-heading" class="sidebar-heading fs-5" style="width: min-content">Content Filter</h2>
    </div>

    @Html.Partial("~/Views/Shared/Components/_view-mode-toggle.cshtml")
</header>

<hr />

<div id="sidebar-content-container">
    <div id="categoriesContainer" class="sidebar-content active">
        <div class="accordion" id="categoriesAccordion">
            @if (@Model.Any())
            {
                @foreach (var category in Model)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button style="--background-hover-color: #191c1f"
                                    class="accordion-button collapsed hoverable"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#category-@category.CategoryID"
                                    aria-expanded="false"
                                    aria-controls="category-@category.CategoryID">
                                @category.CategoryName
                            </button>
                        </h2>
                        <div id="category-@category.CategoryID"
                             class="accordion-collapse collapse"
                             data-bs-parent="#categoriesAccordion">
                            <div class="accordion-body">
                                <a href="/category/@category.CategoryID" class="d-block mb-2">View all posts</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <div id="page-info" class="sidebar-content">
        Page Info Content
    </div>
    
    <div id="content-filter" class="sidebar-content">
        Content Filter Options
    </div>
</div>