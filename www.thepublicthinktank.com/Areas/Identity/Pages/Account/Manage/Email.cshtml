@page "/settings/email"
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
}

    <h3>@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row">
        <div class="col-md-6">
            <form id="email-form" method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="form-floating mb-3 input-group">
                        <input asp-for="Email" class="form-control" placeholder="Please enter your email." disabled />
                            <div class="input-group-append">
                                <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                            </div>
                        <label asp-for="Email" class="form-label"></label>
                    </div>
                }
                else
                {
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Please enter your email." disabled />
                        <label asp-for="Email" class="form-label"></label>
                        <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                    </div>
                }
                <div class="form-floating mb-3">
                    <input asp-for="EmailInput.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
                    <label asp-for="EmailInput.NewEmail" class="form-label"></label>
                    <span asp-validation-for="EmailInput.NewEmail" class="text-danger"></span>
                </div>
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary">Change email</button>
            </form>
        </div>
    <div class="col-md-6 d-flex justify-content-center align-items-center">

        <style>
            #IsSubscribed {
                --checkbox-size: 30px;
                width: var(--checkbox-size);
                height: var(--checkbox-size);
            }
        </style>

        @* The Users can update their email subscription status here *@
        <form id="subscription-form" method="post" asp-page-handler="UpdateSubscription" class="text-center d-flex flex-column align-items-center">
            <p class="fs-5">You are currently <b>@(Model.IsSubscribed ? "subscribed" : "unsubscribed")</b> to get emails from this app</p>
            <div class="form-check mb-3 d-flex align-items-center m-auto">
                <input asp-for="IsSubscribed"
                       class="form-check-input me-3"
                       type="checkbox"
                       id="IsSubscribed">
                <label class="form-check-label" asp-for="IsSubscribed">
                    &larr; Email Subscription Status
                </label>
            </div>
        </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Site/UserSettings.js"></script>
}
